version: '3'

services:
  node:
    image: node:carbon
    restart: unless-stopped
    volumes:
        - ..:/home/node/app
    working_dir: /home/node/app
    ports:
        - ${NODE_APP_PORT}
    environment:
      NODE_ENV: ${NODE_ENV}
      NODE_APP_PORT: ${NODE_APP_PORT}
    command: ${NODE_COMMAND}